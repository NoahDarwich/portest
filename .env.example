# Pro-Test Configuration
# Copy this file to .env and customize as needed
# All values shown are defaults

# ============================================================
# Application Settings
# ============================================================
# Application environment: development, staging, production
ENVIRONMENT=development

# Enable debug mode (additional logging, error details)
DEBUG=false

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ============================================================
# API Server Settings
# ============================================================
# Host to bind the API server
HOST=0.0.0.0

# Port for the API server
PORT=8000

# API route prefix
API_PREFIX=/api/v2

# ============================================================
# CORS Settings
# ============================================================
# Comma-separated list of allowed origins
# For production, specify exact domains: https://yourdomain.com
CORS_ORIGINS=["http://localhost:3000","http://localhost:8501"]

# ============================================================
# Model Settings
# ============================================================
# Path to the trained model file
MODEL_PATH=api/final_RF_model

# Path to the preprocessing pipeline file
PIPELINE_PATH=api/pipeline

# Enable model caching in memory
MODEL_CACHE_ENABLED=true

# ============================================================
# Redis/Caching Settings (Optional)
# ============================================================
# Redis connection URL (leave empty to disable caching)
# Format: redis://[[username]:[password]@]host[:port][/database]
REDIS_URL=

# Cache TTL in seconds (default: 1 hour)
CACHE_TTL_SECONDS=3600

# Enable prediction caching
CACHE_ENABLED=false

# ============================================================
# Rate Limiting
# ============================================================
# Maximum requests per window
RATE_LIMIT_REQUESTS=100

# Rate limit window in seconds
RATE_LIMIT_WINDOW_SECONDS=60

# ============================================================
# Data Settings
# ============================================================
# Path to data directory
DATA_PATH=data

# ============================================================
# Frontend Settings (Streamlit)
# ============================================================
# API URL for frontend to connect to
API_URL=http://localhost:8000
